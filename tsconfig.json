{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "astal/gtk3",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "noImplicitAny": false,
        "paths": {
            "astal": [
                "${pkgs.astal3}/share/astal/gjs"
            ],
            "astal/*": [
                "${pkgs.astal3}/share/astal/gjs/*"
            ]
        },
        "strict": true,
        "target": "ES2022"
    }
}